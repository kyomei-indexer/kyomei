{
  "name": "@kyomei/api",
  "version": "0.0.1",
  "description": "Ponder-compatible GraphQL API server for Kyomei",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@kyomei/config": "workspace:*",
    "@kyomei/core": "workspace:*",
    "@kyomei/database": "workspace:*",
    "drizzle-orm": "^0.39.3",
    "fastify": "^5.2.0",
    "graphql": "^16.9.0",
    "mercurius": "^15.0.0"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
